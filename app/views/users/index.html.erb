<div class="container mt-4">
  <div class="row">
  
    <div class="col-md-3">
       <%= render 'user' %>
       <%= render 'books/new' %>
    </div>

      <div class="col-md-8 offset-md-1">
          <h1>Users</h1>
          <table class="w-100">
            <thead class="border-top border-bottom border-seconddark">
              <tr>
                <th class="py-3">image</th><th>name</th><th colspan="3"></th>
              </tr>
            </thead>
            
            
            <% @users.each do |user| %>
            <tbody>
              <tr class="border-bottom border-seconddark">
                
                <td class="pt-4">
                  <%= link_to user_path(user.id) do %>
                    <p><%= image_tag user.get_profile_image(100,100) %></p>
                  <% end %>
                </td>
                
                <td><%= user.name %></td>
                
                <td><%= link_to 'Show', user_path(user.id) %></td>
                
              </tr>
            </tbody>
            <% end %>
          </table>
      </div>
    </div>
</div>